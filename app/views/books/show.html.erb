<div class="container px5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book, user: @user, current_user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100, 100) %><br/>
              <%= link_to @book.user.name, user_path(@book.user_id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>


