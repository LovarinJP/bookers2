<div class="container px5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @new, user: @user, current_user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do%>
                <%= image_tag @book.user.get_profile_image(100, 100) %><br/>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
            <% end %>
            <td><%= render 'favorites/btn', book: @book %></td>
            <td><%= render 'book_comments/count', book: @book %></td>
          </tr>
        </tbody>
      </table>
      <%= render 'book_comments/index', book: @book %>
      <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>


    <style>
  table {
    width: 100% ;
  }

  tr {
    border-top: 1px solid ;
    border-color: #dcdcdc ;
  }

</style>


