<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tr>
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
      <% if @user == current_user %>
        <p><%= link_to "Edit", edit_user_path(@user.id) %></p>
      <% end %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>